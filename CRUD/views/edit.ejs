<%- include('./partials/header.ejs') %>

    <div class="container">
       <div class="row ">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Update Student</h2>

            <form method="post" action="/student/update/<%= data._id %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= data.name %>">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" name="age" id="age"value="<%= data.age %>">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">Fees</label>
                    <input type="text" class="form-control" id="fees" name="fees"value="<%= data.fees %>">
                </div>
                <button class="btn btn-primary" type="submit"> Update</button>
                <button class="btn btn-secondary" > Back To Home</button>
            </form>

        </div>
       </div>
    </div>

    <%- include('./partials/footer.ejs') %>